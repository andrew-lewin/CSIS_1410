package test;

import java.awt.event.*;
 
public class PacRunner implements KeyListener
{
        private static Grid gr;
        public static void main (String[] args)
        {   
        gr = new Grid();
        gr.addGhost(new Location(1,1));
        gr.movePac(new Location(4,1));
        gr.show();
        }
     
        public void keyPressed(KeyEvent e)
        {
            if(e.getKeyCode() == 38) gr.move(Location.UP);          
            else if(e.getKeyCode() == 40) gr.move(Location.DOWN);
            else if(e.getKeyCode() == 37) gr.move(Location.LEFT);
            else if(e.getKeyCode() == 39) gr.move(Location.RIGHT);
            System.out.println("keys are pressed");
             
        }
 
     
        public void keyReleased(KeyEvent e)
        {
        	if(e.getKeyCode() == 38) gr.move(Location.UP);          
            else if(e.getKeyCode() == 40) gr.move(Location.DOWN);
            else if(e.getKeyCode() == 37) gr.move(Location.LEFT);
            else if(e.getKeyCode() == 39) gr.move(Location.RIGHT);
        }
         
        public void keyTyped(KeyEvent e)
        {
        	if(e.getKeyCode() == 38) gr.move(Location.UP);          
            else if(e.getKeyCode() == 40) gr.move(Location.DOWN);
            else if(e.getKeyCode() == 37) gr.move(Location.LEFT);
            else if(e.getKeyCode() == 39) gr.move(Location.RIGHT);
        }
}